{
  "name": "puzzlemaster",
  "version": "1.0.0",
  "description": "An MCP client that allows teams of agents to complete long-horizon tasks.",
  "main": "./out/main/index.js",
  "author": "Cliff Hall <cliff@futurescale.com>",
  "license": "BSD-3-Clause",
  "homepage": "https://futurescale.com",
  "scripts": {
    "dev": "electron-vite dev",
    "start": "electron-vite preview",
    "build": "prisma generate && npm run typecheck && electron-vite build",
    "test": "NODE_OPTIONS=--experimental-vm-modules vitest run",
    "lint": "npm run prettier && npm run eslint && npm run stylelint && npm run typecheck",
    "prettier:fix": "prettier --write \"**/*.{ts,tsx}\"",
    "build:dir": "npm run build && electron-builder --dir",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "electron-vite build && electron-builder --mac",
    "build:linux": "electron-vite build && electron-builder --linux",
    "eslint": "eslint ./**/*.{ts,tsx} --cache",
    "stylelint": "stylelint '**/*.css' --cache --allow-empty-input",
    "prettier": "prettier --check \"**/*.{ts,tsx}\"",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
    "vitest:watch": "NODE_OPTIONS=--experimental-vm-modules vitest",
    "postinstall": "electron-builder install-app-deps",
    "create:db": "prisma migrate dev --name init"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.1",
    "@electron-toolkit/utils": "^4.0.0",
    "@mantine/core": "^8.1.3",
    "@mantine/dropzone": "^8.1.3",
    "@mantine/form": "^8.1.3",
    "@mantine/hooks": "^8.1.3",
    "@mantine/modals": "^8.1.3",
    "@mantine/notifications": "^8.1.3",
    "@modelcontextprotocol/sdk": "^1.15.0",
    "@modelcontextprotocol/server-filesystem": "^2025.1.14",
    "@prisma/adapter-better-sqlite3": "^6.11.1",
    "@prisma/client": "^6.11.1",
    "@puremvc/puremvc-typescript-multicore-framework": "^2.1.2",
    "@puremvc/puremvc-typescript-util-async-command": "^1.0.1",
    "@puremvc/puremvc-typescript-util-state-machine": "^1.0.2",
    "@radix-ui/react-icons": "^1.3.2",
    "@tabler/icons-react": "^3.34.1",
    "db": "file:prisma/generated",
    "dotenv": "^16.5.0",
    "electron-updater": "^6.3.9",
    "neverthrow": "^8.2.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-icons": "^5.5.0",
    "react-router-dom": "^6.30.1"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config-prettier": "^3.0.0",
    "@electron-toolkit/eslint-config-ts": "^3.0.0",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@eslint/js": "^9.29.0",
    "@ianvs/prettier-plugin-sort-imports": "^4.4.2",
    "@storybook/react": "^8.6.12",
    "@storybook/react-vite": "^8.6.12",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^22.16.3",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^3.2.4",
    "electron": "^35.1.5",
    "electron-builder": "^25.1.8",
    "electron-vite": "^3.1.0",
    "eslint": "^9.23.0",
    "eslint-config-mantine": "^4.0.3",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "identity-obj-proxy": "^3.0.0",
    "jsdom": "^26.1.0",
    "postcss": "^8.5.3",
    "postcss-preset-mantine": "^1.17.0",
    "postcss-simple-vars": "^7.0.1",
    "prettier": "^3.5.1",
    "prisma": "^6.11.1",
    "prop-types": "^15.8.1",
    "sass": "^1.90.0",
    "stylelint": "^16.20.0",
    "stylelint-config-standard-scss": "^15.0.1",
    "ts-jest": "^29.2.5",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.34.0",
    "vite": "^6.2.3",
    "vitest": "^3.2.4"
  }
}
