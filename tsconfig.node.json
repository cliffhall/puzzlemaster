{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "include": [
    "electron.vite.config.*",
    "src/main/**/*",
    "src/preload/**/*",
    "src/domain/**/*",
    "src/types/**/*",
    "src/test/**/*"
  ],
  "compilerOptions": {
    "esModuleInterop": true,
    "composite": true,
    "types": ["electron-vite/node", "@testing-library/jest-dom", "vitest/globals", "@puremvc/puremvc-typescript-multicore-framework"]
  }
}
